{
  "name": "tailwind-template",
  "version": "0.1.0",
  "description": "A template for inlcuding TailwindCSS with basic html projects, using webpack",
  "private": true,
  "scripts": {
    "sync": "browser-sync start --config browser-sync.config.js",
    "watch": "webpack --config webpack.config.js --mode=development --watch",
    "build": "export NODE_ENV=production || set NODE_ENV=production&&  webpack --config webpack.config.js --mode=production"
  },
  "author": "Chaphasilor",
  "license": "GPL-3.0",
  "dependencies": {
    "autoprefixer": "^10.0.1",
    "tailwindcss": "^2.0.1",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "file-loader": "^6.1.1",
    "postcss": "^8.1.2",
    "postcss-loader": "^4.0.4",
    "style-loader": "^2.0.0"
  }
}
